<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

        <ImageView
            android:id="@+id/image_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/rollfilm"
            android:layout_marginTop="-300dp"
            android:layout_marginHorizontal="50dp"
            android:contentDescription="@string/image_app_desc" />

        <Button
            android:id="@+id/button_get_started"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/btnget"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/text_bawah"
            android:textAlignment="center"
            android:textColor="#FFFEFE"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_get_started" />

</androidx.constraintlayout.widget.ConstraintLayout>